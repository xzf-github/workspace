<Window x:Class="sy3._2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sy3._2"
        mc:Ignorable="d"
        Title="徐泽枫_MainWindow" Height="350" Width="525">
    <DockPanel>
    <Label DockPanel.Dock="Top" Content= "Thread和ThreadPool基本用法"/>
        <Border DockPanel.Dock="Bottom">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="btnStart" Width="70" Content="启动任务" Click="btnStart_Click"/>
                <Button Name="btnStop" Margin="20 0 0 0" Width="70" Content="终止任务" Click="btnStop_Click"/>
            </StackPanel> 
        </Border>
        <ScrollViewer>
                <StackPanel Background="White " TextBlock.LineHeight="20">
                    <TextBlock x:Name="textBlock1" Margin="5" TextWrapping="Wrap"/>
                </StackPanel>
                </ScrollViewer>
                    </DockPanel>
</Window>
